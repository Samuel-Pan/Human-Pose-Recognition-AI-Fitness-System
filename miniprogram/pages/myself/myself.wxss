/* pages/myself/myself.wxss */
.pageContainer{
  background:-webkit-linear-gradient(top,#a8ceff,#ebf1fa,#fff);
  /* overflow: scroll; */
  /* min-height: 100vh; */
  height: 100%;
}
.center_view{
  display: flex;
  justify-content: center;  /* 水平居中 */
}
text{
  margin-left: 20px;
  color: #000000;
}
.header {
  text-align: center;
  width: 100%;
  height: 22%;
}
.headerImg{
  border-radius: 50%;
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  margin-top: 10%;
  margin-bottom: 15px;
}
.avatarImg{
  width: 120rpx;
  height: 120rpx;
  padding-left:0px;
}
.header_text{
  margin-bottom: 30px;
  display: block;
  margin-left: 0px;
  color: rgb(43, 43, 43);
}
/* 包裹选项的view */
.detail{
background-color: #fff;
border-top-left-radius: 40px;
border-top-right-radius: 40px;
margin-top: 12%;
border: 1px solid #fff;
padding-bottom: 10px;
height: 70%;
}
.container1{
  width: 100%;
  margin-top: 10px;
}
.container2{
  width: 90%;
  border-bottom: 1px solid #f1f1f1;
}
image{
  padding-left: 20px;
  width: 20px;
  height: 20px;
}
.infoItem{
  width: 100%;
  height: 40px;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.infoUpdate_text{
  display: inline-block;
  margin-left: 38%;
  border: 1px solid #1f72df;
  border-radius: 100px;
  background-color: #fff;
  color: #1f72df;
}
.answerItem{
  width: 100%;
  padding-top: 20px;
  padding-bottom: 20px;
  display: flex;
  align-items: center;
}
input{
  display:inline-block;
  margin-left: 8px;
  width: 15%;
  border-bottom: 1px solid #000;
  text-align: center;
}
